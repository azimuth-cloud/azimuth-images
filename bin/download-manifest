#!/usr/bin/env bash

set -euxo pipefail

# Download the manifest from S3 for the current SHA
cat <<EOF > ~/.s3cfg
host_base = ${S3_HOST}
host_bucket = ${S3_HOST_BUCKET:-"$S3_HOST"}
access_key = ${S3_ACCESS_KEY}
secret_key = ${S3_SECRET_KEY}
use_https = True
EOF
s3cmd get "s3://${S3_BUCKET}/${GITHUB_SHA}.manifest" "$MANIFEST_FILE"
